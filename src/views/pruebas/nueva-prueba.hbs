<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Nueva Prueba</h3>
    </div>
    <div class="card-body">
      <form action="/pruebas/nueva-prueba" method="POST">
        <div class="form-group">
          <input type="text" name="title" class="form-control" placeholder="Title" autofocus/>
        </div>
        <div class="form-group">
            <input name="preguntas" class="form-control" type="hidden" value= 0  >   
        </div>
        <div class="form-group">
            <input name="estado" class="form-control" type="hidden" value='incompleta'  >   
        </div>
        
        <div class="form-group">
          <label for="materia">Elija la materia de la prueba</label>
          <select id="materia" name="materia" class="form-control" >
                <option value="matematica" selected> Matematica </option>
                <option value="historia"> Historia </option>
                <option value="lenguaje"> Lenguaje </option>
                <option value="ciencias"> Ciencias </option>
           </select>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>