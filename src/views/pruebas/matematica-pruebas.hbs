<div class="row">
  {{#each pruebas}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ title }} <a href="/pruebas/edit/{{ _id }}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{ materia }} </p>
        <p>{{ estado }} </p>
        <p>{{ preguntas }} / 20</p>
        <div class="send">
          <a href="/notes/add/{{ _id }}" class="btn btn-primary btn-block">Agregar pregunta</a><br>
        </div>

        <div class="preguntas">
          <a href="/notes/{{ _id }}" class="btn btn-primary btn-block">Ver preguntas</a><br>
        </div>
       

        <!-- DELETE REQUEST -->
        <form action="/pruebas/delete/{{ _id }}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
<div class="card mx-auto">
    <div class="card-body">
      <h1>Hola {{user.Nombre}}</h1>
      <p clsss="lead">No hay pruebas</p>
      <a href="/pruebas/add" class="btn btn-success btn-block">Sube una nueva</a>
    </div>
  </div>
  {{/each}}
</div>