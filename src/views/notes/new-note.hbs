<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>New Note</h3>
    </div>
    <div class="card-body">
      <form action="/notes/new-note/{{ prueba._id }}" method="POST">
        <div class="form-group">
          <input type="text" name="title" class="form-control" placeholder="Title" autofocus/>
        </div>
        <div class="form-group">
          <textarea name="description" class="form-control" placeholder="Description"></textarea>
        </div>
        <div class="form-group">
          <textarea name="alternativa1" class="form-control" placeholder="alternativa 1"></textarea>
        </div>
        <div class="form-group">
          <textarea name="alternativa2" class="form-control" placeholder="alternativa 2"></textarea>
        </div>
        <div class="form-group">
          <textarea name="alternativa3" class="form-control" placeholder="alternativa 3"></textarea>
        </div>
        <div class="form-group">
          <textarea name="alternativa4" class="form-control" placeholder="alternativa 4"></textarea>
        </div>
        <div class="form-group">
          <textarea name="alternativa5" class="form-control" placeholder="alternativa 5"></textarea>
        </div>
        <div class="form-group">
          <label for="Respuesta">Alternativa Correcta</label>
          <select id="Respuesta" name="Respuesta" class="form-control" >
                <option value="1" selected> alternativa 1 </option>
                <option value="2"> alternativa 2 </option>
                <option value="3"> alternativa 3 </option>
                <option value="4"> alternativa 4 </option>
                <option value="5"> alternativa 5 </option>
           </select>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>